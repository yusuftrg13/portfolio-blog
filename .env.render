# Render.com Environment Variables
# Bu değişkenleri Render dashboard'ında Environment kısmına ekleyin

# Django Settings
SECRET_KEY=django-insecure-your-secret-key-here-change-this-immediately-123456789
DEBUG=False
DJANGO_SETTINGS_MODULE=portfolio_blog.settings_production

# Database (Render otomatik PostgreSQL URL'i sağlayacak)
DATABASE_URL=postgresql://user:password@hostname:port/database_name

# Allowed Hosts (Render domain adınızı buraya ekleyin)
ALLOWED_HOSTS=your-app-name.onrender.com,localhost,127.0.0.1

# Security Settings (Production için)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Optional: Custom domain varsa
# ALLOWED_HOSTS=your-app-name.onrender.com,yourdomain.com,localhost,127.0.0.1